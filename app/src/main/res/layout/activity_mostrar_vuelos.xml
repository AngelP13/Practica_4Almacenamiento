<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C58D8D"
    tools:context=".MostrarVuelos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MostrarVuelosActivity">

        <TextView
            android:id="@+id/listViewVuelosAerolineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Vuelos y Aerolíneas Registrados:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewVuelosAerolineas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSeleccionarVueloAerolinea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccionar Vuelo y Aerolínea" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>